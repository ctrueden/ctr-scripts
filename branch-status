#!/bin/sh

#
# branch-status - scan for branches with unpushed commits
#

repos=$(grep '^\[.*\]$' ~/.mrconfig | sed -e 's/^\[\(.*\)\]$/\1/')
for repo in $repos
do (
	if [ "$repo" == "DEFAULT" ]
	then
		continue
	fi
	cd "$HOME/$repo"
	if [ -d .git ]
	then
		branches=$(git branch -v | grep '\[ahead' | sed -e 's/^[* ] \([^ ]*\) .*/\1/')
		for branch in $branches
		do
			echo $repo: $branch
		done
	fi
) done
